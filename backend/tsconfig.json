{
  "compilerOptions": {
    // types option has been previously configured
    "types": [
      // add node as an option
      "node",
      "koa",
      "koa-router"
    ],
    // typeroots option has been previously configured
    "typeRoots": [
      // add path to @types
      "./node_modules/@types"
    ],
    "module": "commonjs",
    "removeComments": true,
    "sourceMap": true,
    "target": "es6"
  },
  "include": [
    "src/**/*"
  ]
}